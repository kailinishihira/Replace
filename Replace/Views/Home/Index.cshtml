@{
    Layout = "_Layout";
}

<div class="jumbotron">
    <h1>Find and Replace!</h1>
</div>

<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8 home-buttons">
    <form action="/" method="post">
        <label for="user-string">Enter a sentence</label>
        <input id="user-string" name="user-string" class="form-control" type="text">
        <label for="chosen-word">Enter word to be replaced</label>
        <input id="chosen-word" name="chosen-word" class="form-control" type="text"> 
        <label for="replacement-word">Replace with this word</label>
        <input id="replacement-word" name="replacement-word" class="form-control" type="text">     
        <br>   
      <button type="submit" class="btn btn-info btn-lg home-btn">Replace</button>
    </form>
    
    <h2>New Sentence:</h2>
    <h3>@Model</h3>
    </div>
    <div class="col-md-2">
    </div>
</div>